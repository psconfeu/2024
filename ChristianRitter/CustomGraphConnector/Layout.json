{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "columns": [
                {
                    "width": "auto",
                    "height": "stretch",
                    "items": [
                        {
                            "horizontalAlignment": "Center",
                            "url": "https://searchuxcdn.blob.core.windows.net/designerapp/images/DefaultMRTIcon.png",
                            "size": "Small",
                            "altText": "Result logo",
                            "type": "Image"
                        }
                    ],
                    "type": "Column"
                },
                {
                    "width": 8,
                    "horizontalAlignment": "Center",
                    "spacing": "Medium",
                    "items": [
                        {
                            "weight": "Bolder",
                            "color": "Accent",
                            "size": "Medium",
                            "text": "[${title}]",
                            "type": "TextBlock"
                        },
                        {
                            "maxLines": 3,
                            "wrap": true,
                            "text": "${speakers}",
                            "type": "TextBlock"
                        },
                        {
                            "text": "${description}",
                            "wrap": true,
                            "type": "TextBlock",
                            "maxLines": 3
                        },
                        {
                            "spacing": "Small",
                            "text": "${startsAt}",
                            "type": "TextBlock"
                        },
                        {
                            "spacing": "Small",
                            "text": "${room}",
                            "type": "TextBlock"
                        }
                    ],
                    "type": "Column"
                }
            ],
            "type": "ColumnSet"
        }
    ],
    "type": "AdaptiveCard"
  }